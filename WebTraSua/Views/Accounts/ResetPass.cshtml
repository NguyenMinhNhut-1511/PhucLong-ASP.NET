
@{
    ViewBag.Title = "ResetPass";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}

<div class="row">
    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Đổi Mật Khẩu Thành Viên</h1>
            </div>
            @using (Html.BeginForm("ResetPass", "Accounts", FormMethod.Post, htmlAttributes: new { @class = "user" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <input type="password" class="form-control form-control-user"
                           name="token" hidden>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-user"
                           name="password" placeholder="Mật Khẩu">
                </div>
                <div style="color:red; font-size:0.87rem; padding-left:1rem; padding-top:0.2rem;text-align:center;">@ViewBag.Pass</div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-user"
                           name="repassword" placeholder="Nhập Lại Mật Khẩu">
                </div>
                <div style="color:red; font-size:0.87rem; padding-left:1rem; padding-top:0.2rem;text-align:center;">@ViewBag.RePass</div>
                <input type="Submit" class="btn btn-primary btn-user btn-block" value="Xác Nhận" />
            }
            <hr>
            <div class="text-center">
                <a class="small" href="@Url.Action("Register","Accounts")">Tạo Tài Khoản !</a>
            </div>
            <div class="text-center">
                <a class="small" href="@Url.Action("Forget","Accounts")">Quên Mật Khẩu ?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        document.getElementsByName('token')[0].value = urlParams.get('token')
    </script>
}